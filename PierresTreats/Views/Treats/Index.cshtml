@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>Treats</h1>
<hr>
<div class="card"> 
  @if (@Model.Count == 0)
  {
    <h3>No treats have been added yet!</h3>
  } 
  else
  {
    <h6 class="card-header">
      <div class="hstack gap-3">
        Treat Name
        <div class="vr"></div>
        Price
      </div>
    </h6>
  }

  <ul>
    @foreach(Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}  | {treat.Price}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
</div>
<hr><br>


<p>@Html.ActionLink("Add new treat", "Create", "Treats", null, new { @class = "btn btn-light" })</p>
<p>@Html.ActionLink("Add new flavors", "Create", "Flavors", null, new { @class = "btn btn-light" })</p>