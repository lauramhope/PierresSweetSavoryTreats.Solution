@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>Flavors for @User.Identity.Name</h1>
<hr>

<div class="card">
@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <h6 class="card-header">Flavors</h6>
  <ul>
    @foreach (Flavor flavor in Model)
    {
          <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
</div>
<hr><br>

<p>@Html.ActionLink("Add new flavor", "Create", "Flavors", null, new { @class = "btn btn-light" })</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-light" })</p>